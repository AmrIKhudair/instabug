// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String      @id
  actor_id    String
  actor_name  String
  group       String
  action      EventAction @relation(fields: [action_id], references: [id])
  action_id   String
  target_id   String
  target_name String
  location    String
  occured_at  DateTime
  metadata    Json
}

model EventAction {
  id      String  @id
  name    String  @unique
  events  Event[]
}
